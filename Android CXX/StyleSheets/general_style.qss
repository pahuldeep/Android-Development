}

/* Bottom sheet dialog */
QDialog.bottom-sheet {
    background-color: transparent;
}

QFrame.bottom-sheet-content {
    background-color: #FFFFFF;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
    min-height: 120px;
    padding: 16px;
}

QFrame.bottom-sheet-content[darkMode="true"] {
    background-color: #1E1E1E;
}

/* Range slider (two handles) */
QSlider.range-slider::groove:horizontal {
    height: 4px;
    background: #E0E0E0;
    border-radius: 2px;
}

QSlider.range-slider::handle:horizontal {
    background: #2962FF;
    border: none;
    width: 18px;
    height: 18px;
    margin: -7px -10px;
    border-radius: 9px;
}

QSlider.range-slider::add-page:horizontal {
    background: #E0E0E0;
}

QSlider.range-slider::sub-page:horizontal {
    background: #2962FF;
}

/* Custom button styles */
QPushButton.success {
    background-color: #00C853;
}

QPushButton.success:hover {
    background-color: #00E676;
}

QPushButton.success:pressed {
    background-color: #00B248;
}

QPushButton.warning {
    background-color: #FFC400;
}

QPushButton.warning:hover {
    background-color: #FFAB00;
}

QPushButton.warning:pressed {
    background-color: #FFAB00;
}

QPushButton.danger {
    background-color: #FF3D00;
}

QPushButton.danger:hover {
    background-color: #DD2C00;
}

QPushButton.danger:pressed {
    background-color: #DD2C00;
}

/* Loading indicator frame */
QFrame.loading {
    background-color: transparent;
}

/* Glass effect panel */
QFrame.glass-panel {
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.8);
    border-radius: 8px;
    backdrop-filter: blur(10px);
}

QFrame.glass-panel[darkMode="true"] {
    background-color: rgba(30, 30, 30, 0.7);
    border: 1px solid rgba(80, 80, 80, 0.8);
}

/* Timeline component */
QFrame.timeline {
    background-color: transparent;
}

QFrame.timeline-item {
    background-color: transparent;
    padding-left: 24px;
    border-left: 2px solid #E0E0E0;
    margin-bottom: 16px;
}

QFrame.timeline-item:last-child {
    border-left: 2px solid transparent;
}

QFrame.timeline-dot {
    background-color: #2962FF;
    border-radius: 6px;
    min-width: 12px;
    max-width: 12px;
    min-height: 12px;
    max-height: 12px;
    margin-left: -31px;
}

QFrame.timeline-content {
    background-color: #FFFFFF;
    border-radius: 4px;
    padding: 16px;
    margin-left: 12px;
    border: 1px solid #E0E0E0;
}

QFrame.timeline-item[darkMode="true"] {
    border-left: 2px solid #424242;
}

QFrame.timeline-dot[darkMode="true"] {
    background-color: #3D5AFE
}

QFrame.timeline-dot[darkMode="true"] {
    background-color: #3D5AFE;
}

QFrame.timeline-content[darkMode="true"] {
    background-color: #2C2C2C;
    border: 1px solid #424242;
    color: #FFFFFF;
}

QFrame.timeline-item QLabel[darkMode="true"] {
    color: #E0E0E0;
}
