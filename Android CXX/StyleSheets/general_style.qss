    background-color: #333333;
}

QSpinBox[darkMode="true"]::up-button:hover, QSpinBox[darkMode="true"]::down-button:hover,
QDoubleSpinBox[darkMode="true"]::up-button:hover, QDoubleSpinBox[darkMode="true"]::down-button:hover,
QDateTimeEdit[darkMode="true"]::up-button:hover, QDateTimeEdit[darkMode="true"]::down-button:hover {
    background-color: #424242;
}

/*** CALENDAR WIDGET ***/
QCalendarWidget {
    background-color: #FFFFFF;
    selection-background-color: #E3F2FD;
}

QCalendarWidget QToolButton {
    height: 30px;
    color: #212121;
    background-color: transparent;
    margin: 2px;
