/* Advanced General Application Stylesheet
 * Created: April 2025
 * A comprehensive, feature-rich stylesheet with advanced styling techniques
 * Supporting light/dark modes, animations, and custom components
 */

/*** VARIABLES ***/
/* These are not actual CSS variables but serve as a reference for colors used throughout */
/* 
 * Primary: #2962FF
 * Primary Light: #768FFF
 * Primary Dark: #0039CB
 * Secondary: #00BFA5
 * Secondary Light: #5DF2D6
 * Secondary Dark: #008E76
 * Background Light: #FAFAFA
 * Background Dark: #121212
 * Surface Light: #FFFFFF
 * Surface Dark: #1E1E1E
 * Error: #FF3D00
 * Warning: #FFC400
 * Success: #00C853
 * Text Light Primary: #212121
 * Text Light Secondary: #757575
 * Text Dark Primary: #FFFFFF
 * Text Dark Secondary: #B0B0B0
 */

/*** GLOBAL STYLING ***/
* {
    outline: none;
    font-family: 'Segoe UI', 'Roboto', sans-serif;
}

/* Main application styling */
QWidget {
    font-size: 14px;
    color: #212121;
    background-color: #FAFAFA;
}

/* Dark mode class that can be applied to any widget */
QWidget[darkMode="true"] {
    color: #FFFFFF;
    background-color: #121212;
}

QMainWindow, QDialog {
    background-color: #FAFAFA;
}

QMainWindow[darkMode="true"], QDialog[darkMode="true"] {
    background-color: #121212;
}

/*** TYPOGRAPHY ***/
QLabel {
    color: #212121;
}

QLabel[darkMode="true"] {
    color: #FFFFFF;
}

QLabel.h1 {
    font-size: 32px;
    font-weight: 300;
    letter-spacing: -0.5px;
}

QLabel.h2 {
    font-size: 24px;
    font-weight: 400;
}

QLabel.h3 {
    font-size: 20px;
    font-weight: 500;
    letter-spacing: 0.15px;
}

QLabel.subtitle1 {
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0.15px;
}

QLabel.subtitle2 {
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0.1px;
}

QLabel.body1 {
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0.5px;
}

QLabel.body2 {
    font-size: 14px;
    font-weight: 400;
    letter-spacing: 0.25px;
}

QLabel.caption {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 0.4px;
}

QLabel.overline {
    font-size: 10px;
    font-weight: 400;
    letter-spacing: 1.5px;
    text-transform: uppercase;
}

/*** BUTTONS ***/
/* Base button styling */
QPushButton {
    background-color: #2962FF;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    font-weight: 500;
    min-height: 36px;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

QPushButton:hover {
    background-color: #768FFF;
}

QPushButton:pressed {
    background-color: #0039CB;
}

QPushButton:disabled {
    background-color: #BDBDBD;
    color: #757575;
}

QPushButton[darkMode="true"] {
    background-color: #3D5AFE;
}

QPushButton[darkMode="true"]:hover {
    background-color: #8187FF;
}

QPushButton[darkMode="true"]:pressed {
    background-color: #0031CA;
}

QPushButton[darkMode="true"]:disabled {
    background-color: #424242;
    color: #757575;
}

/* Outlined button variant */
QPushButton.outlined {
    background-color: transparent;
    color: #2962FF;
    border: 1px solid #2962FF;
}

QPushButton.outlined:hover {
    background-color: rgba(41, 98, 255, 0.08);
}

QPushButton.outlined:pressed {
    background-color: rgba(41, 98, 255, 0.12);
}

QPushButton.outlined:disabled {
    border-color: #BDBDBD;
    color: #BDBDBD;
}

QPushButton.outlined[darkMode="true"] {
    color: #3D5AFE;
    border: 1px solid #3D5AFE;
}

QPushButton.outlined[darkMode="true"]:hover {
    background-color: rgba(61, 90, 254, 0.12);
}

QPushButton.outlined[darkMode="true"]:disabled {
    border-color: #424242;
    color: #757575;
}

/* Text button variant */
QPushButton.text {
    background-color: transparent;
    color: #2962FF;
    padding: 8px 8px;
}

QPushButton.text:hover {
    background-color: rgba(41, 98, 255, 0.08);
}

QPushButton.text:pressed {
    background-color: rgba(41, 98, 255, 0.12);
}

QPushButton.text:disabled {
    color: #BDBDBD;
}

QPushButton.text[darkMode="true"] {
    color: #3D5AFE;
}

QPushButton.text[darkMode="true"]:disabled {
    color: #757575;
}

/* Icon buttons */
QPushButton.icon {
    background-color: transparent;
    border-radius: 18px;
    min-width: 36px;
    max-width: 36px;
    min-height: 36px;
    max-height: 36px;
    padding: 6px;
}

QPushButton.icon:hover {
    background-color: rgba(0, 0, 0, 0.08);
}

QPushButton.icon:pressed {
    background-color: rgba(0, 0, 0, 0.12);
}

QPushButton.icon[darkMode="true"]:hover {
    background-color: rgba(255, 255, 255, 0.08);
}

QPushButton.icon[darkMode="true"]:pressed {
    background-color: rgba(255, 255, 255, 0.12);
}

/* Floating Action Button */
QPushButton.fab {
    background-color: #00BFA5;
    color: white;
    border-radius: 28px;
    min-width: 56px;
    min-height: 56px;
    padding: 16px;
}

QPushButton.fab:hover {
    background-color: #5DF2D6;
}

QPushButton.fab:pressed {
    background-color: #008E76;
}

QPushButton.fab-mini {
    border-radius: 20px;
    min-width: 40px;
    min-height: 40px;
    padding: 8px;
}

/*** INPUT FIELDS ***/
QLineEdit, QTextEdit, QPlainTextEdit {
    border: none;
    border-bottom: 2px solid #BDBDBD;
    border-radius: 0;
    padding: 8px 0;
    background-color: transparent;
    selection-background-color: #2962FF;
    selection-color: white;
    transition: border-color 0.2s;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-bottom: 2px solid #2962FF;
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    border-bottom: 2px dotted #E0E0E0;
    color: #9E9E9E;
}

QLineEdit[darkMode="true"], QTextEdit[darkMode="true"], QPlainTextEdit[darkMode="true"] {
    color: #FFFFFF;
    border-bottom: 2px solid #616161;
}

QLineEdit[darkMode="true"]:focus, QTextEdit[darkMode="true"]:focus, QPlainTextEdit[darkMode="true"]:focus {
    border-bottom: 2px solid #3D5AFE;
}

QLineEdit[darkMode="true"]:disabled, QTextEdit[darkMode="true"]:disabled, QPlainTextEdit[darkMode="true"]:disabled {
    border-bottom: 2px dotted #424242;
    color: #757575;
}

/* Filled variant */
QLineEdit.filled, QTextEdit.filled, QPlainTextEdit.filled {
    background-color: rgba(0, 0, 0, 0.04);
    border-bottom: 1px solid #9E9E9E;
    padding: 12px 16px 10px 16px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QLineEdit.filled:focus, QTextEdit.filled:focus, QPlainTextEdit.filled:focus {
    border-bottom: 2px solid #2962FF;
    padding: 12px 16px 9px 16px;
}

QLineEdit.filled[darkMode="true"], QTextEdit.filled[darkMode="true"], QPlainTextEdit.filled[darkMode="true"] {
    background-color: rgba(255, 255, 255, 0.08);
    border-bottom: 1px solid #9E9E9E;
}

/* Outlined variant */
QLineEdit.outlined, QTextEdit.outlined, QPlainTextEdit.outlined {
    border: 1px solid #9E9E9E;
    border-radius: 4px;
    padding: 12px 16px;
}

QLineEdit.outlined:focus, QTextEdit.outlined:focus, QPlainTextEdit.outlined:focus {
    border: 2px solid #2962FF;
    padding: 11px 15px;
}

QLineEdit.outlined[darkMode="true"], QTextEdit.outlined[darkMode="true"], QPlainTextEdit.outlined[darkMode="true"] {
    border: 1px solid #616161;
}

QLineEdit.outlined[darkMode="true"]:focus, QTextEdit.outlined[darkMode="true"]:focus, QPlainTextEdit.outlined[darkMode="true"]:focus {
    border: 2px solid #3D5AFE;
}

/* Error state */
QLineEdit[error="true"], QTextEdit[error="true"], QPlainTextEdit[error="true"] {
    border-bottom-color: #FF3D00;
}

QLineEdit.outlined[error="true"], QTextEdit.outlined[error="true"], QPlainTextEdit.outlined[error="true"] {
    border-color: #FF3D00;
}

/*** CHECKBOXES AND RADIO BUTTONS ***/
QCheckBox, QRadioButton {
    spacing: 8px;
    color: #212121;
}

QCheckBox[darkMode="true"], QRadioButton[darkMode="true"] {
    color: #FFFFFF;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 18px;
    height: 18px;
}

QCheckBox::indicator:unchecked {
    border: 2px solid #757575;
    border-radius: 2px;
    background-color: transparent;
}

QCheckBox::indicator:checked {
    border: 2px solid #2962FF;
    border-radius: 2px;
    background-color: #2962FF;
    image: url(:/resources/check-white.svg);
}

QCheckBox::indicator:indeterminate {
    border: 2px solid #2962FF;
    border-radius: 2px;
    background-color: #2962FF;
    image: url(:/resources/minus-white.svg);
}

QCheckBox[darkMode="true"]::indicator:unchecked {
    border: 2px solid #9E9E9E;
}

QCheckBox[darkMode="true"]::indicator:checked, QCheckBox[darkMode="true"]::indicator:indeterminate {
    border: 2px solid #3D5AFE;
    background-color: #3D5AFE;
}

QRadioButton::indicator:unchecked {
    border: 2px solid #757575;
    border-radius: 10px;
    background-color: transparent;
}

QRadioButton::indicator:checked {
    border: 2px solid #2962FF;
    border-radius: 10px;
    background-color: white;
}

QRadioButton::indicator:checked:pressed {
    border: 2px solid #0039CB;
}

QRadioButton[darkMode="true"]::indicator:unchecked {
    border: 2px solid #9E9E9E;
}

QRadioButton[darkMode="true"]::indicator:checked {
    border: 2px solid #3D5AFE;
    background-color: #1E1E1E;
}

/*** COMBO BOXES AND DROP-DOWNS ***/
QComboBox {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    padding: 8px 12px;
    min-height: 36px;
    background-color: white;
    selection-background-color: #E3F2FD;
}

QComboBox:hover {
    border-color: #9E9E9E;
}

QComboBox:focus {
    border: 2px solid #2962FF;
    padding: 7px 11px;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: right center;
    width: 24px;
    border-left: none;
}

QComboBox::down-arrow {
    image: url(:/resources/chevron-down.svg);
    width: 16px;
    height: 16px;
}

QComboBox QAbstractItemView {
    border: 1px solid #BDBDBD;
    border-radius: 4px;
    background-color: white;
    selection-background-color: #E3F2FD;
    selection-color: #212121;
    outline: none;
}

QComboBox[darkMode="true"] {
    border: 1px solid #616161;
    background-color: #1E1E1E;
    color: #FFFFFF;
}

QComboBox[darkMode="true"]:focus {
    border: 2px solid #3D5AFE;
}

QComboBox[darkMode="true"] QAbstractItemView {
    border: 1px solid #616161;
    background-color: #1E1E1E;
    color: #FFFFFF;
    selection-background-color: rgba(61, 90, 254, 0.2);
}

/* Filled variant */
QComboBox.filled {
    background-color: rgba(0, 0, 0, 0.04);
    border-bottom: 1px solid #9E9E9E;
    border-top: none;
    border-left: none;
    border-right: none;
    border-radius: 4px 4px 0 0;
    padding: 12px 16px;
}

QComboBox.filled:focus {
    border-bottom: 2px solid #2962FF;
    padding: 12px 16px 11px 16px;
}

QComboBox.filled[darkMode="true"] {
    background-color: rgba(255, 255, 255, 0.08);
    border-bottom: 1px solid #9E9E9E;
}

/*** SLIDERS ***/
QSlider {
    qproperty-tickPosition: NoTicks;
}

QSlider::groove:horizontal {
    border: none;
    height: 4px;
    background-color: #E0E0E0;
    border-radius: 2px;
    margin: 0 10px;
}

QSlider::handle:horizontal {
    background-color: #2962FF;
    border: none;
    width: 18px;
    height: 18px;
    margin: -7px -10px;
    border-radius: 9px;
}

QSlider::handle:horizontal:hover {
    background-color: #768FFF;
    width: 22px;
    height: 22px;
    margin: -9px -12px;
    border-radius: 11px;
}

QSlider::handle:horizontal:pressed {
    background-color: #0039CB;
}

QSlider::sub-page:horizontal {
    background-color: #2962FF;
    border-radius: 2px;
}

QSlider[darkMode="true"]::groove:horizontal {
    background-color: #424242;
}

QSlider[darkMode="true"]::handle:horizontal {
    background-color: #3D5AFE;
}

QSlider[darkMode="true"]::handle:horizontal:hover {
    background-color: #8187FF;
}

QSlider[darkMode="true"]::handle:horizontal:pressed {
    background-color: #0031CA;
}

QSlider[darkMode="true"]::sub-page:horizontal {
    background-color: #3D5AFE;
}

/* Vertical slider */
QSlider::groove:vertical {
    border: none;
    width: 4px;
    background-color: #E0E0E0;
    border-radius: 2px;
    margin: 10px 0;
}

QSlider::handle:vertical {
    background-color: #2962FF;
    border: none;
    width: 18px;
    height: 18px;
    margin: -10px -7px;
    border-radius: 9px;
}

QSlider::handle:vertical:hover {
    background-color: #768FFF;
    width: 22px;
    height: 22px;
    margin: -12px -9px;
    border-radius: 11px;
}

QSlider::add-page:vertical {
    background-color: #2962FF;
    border-radius: 2px;
}

/*** PROGRESS BARS ***/
QProgressBar {
    border: none;
    border-radius: 3px;
    background-color: #E0E0E0;
    text-align: center;
    color: transparent;
    height: 6px;
}

QProgressBar::chunk {
    background-color: #2962FF;
    border-radius: 3px;
}

QProgressBar[value="100"]::chunk {
    background-color: #00C853;
}

QProgressBar:disabled {
    background-color: #F5F5F5;
}

QProgressBar:disabled::chunk {
    background-color: #BDBDBD;
}

QProgressBar[darkMode="true"] {
    background-color: #424242;
}

QProgressBar[darkMode="true"]::chunk {
    background-color: #3D5AFE;
}

QProgressBar[darkMode="true"][value="100"]::chunk {
    background-color: #00E676;
}

/* Circular indicator style (animation effects require code-side implementation) */
QProgressBar.circular {
    border-radius: 24px;
    min-width: 48px;
    max-width: 48px;
    min-height: 48px;
    max-height: 48px;
    background-color: transparent;
    text-align: center;
    font-size: 12px;
    color: #212121;
    padding: 0;
}

QProgressBar.circular[darkMode="true"] {
    color: #FFFFFF;
}

/*** TABS ***/
QTabWidget::pane {
    border: none;
    background-color: #FFFFFF;
    border-radius: 4px;
}

QTabWidget::pane[darkMode="true"] {
    background-color: #1E1E1E;
}

QTabBar::tab {
    background-color: transparent;
    color: #757575;
    border: none;
    padding: 12px 16px;
    min-width: 90px;
    font-weight: 500;
    border-bottom: 2px solid transparent;
}

QTabBar::tab:selected {
    color: #2962FF;
    border-bottom: 2px solid #2962FF;
}

QTabBar::tab:hover:!selected {
    color: #212121;
    background-color: rgba(0, 0, 0, 0.04);
}

QTabBar::tab[darkMode="true"] {
    color: #9E9E9E;
}

QTabBar::tab[darkMode="true"]:selected {
    color: #3D5AFE;
    border-bottom: 2px solid #3D5AFE;
}

QTabBar::tab[darkMode="true"]:hover:!selected {
    color: #FFFFFF;
    background-color: rgba(255, 255, 255, 0.08);
}

/* Alternative tab styles - top edge tabs */
QTabBar.edge::tab {
    border-bottom: none;
    border-top: 3px solid transparent;
    border-radius: 4px 4px 0 0;
    background-color: #F5F5F5;
}

QTabBar.edge::tab:selected {
    color: #2962FF;
    border-top: 3px solid #2962FF;
    background-color: #FFFFFF;
}

QTabBar.edge::tab[darkMode="true"] {
    background-color: #333333;
}

QTabBar.edge::tab[darkMode="true"]:selected {
    border-top: 3px solid #3D5AFE;
    background-color: #1E1E1E;
}

/* Pill style tabs */
QTabBar.pills {
    background-color: #F5F5F5;
    border-radius: 20px;
}

QTabBar.pills::tab {
    border-radius: 20px;
    min-width: 90px;
    padding: 8px 16px;
    margin: 4px;
}

QTabBar.pills::tab:selected {
    color: white;
    background-color: #2962FF;
    border-bottom: none;
}

QTabBar.pills[darkMode="true"] {
    background-color: #333333;
}

QTabBar.pills[darkMode="true"]::tab:selected {
    background-color: #3D5AFE;
}

/*** SCROLL BARS ***/
QScrollBar:vertical {
    border: none;
    background: transparent;
    width: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #BDBDBD;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #9E9E9E;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
    width: 0;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar[darkMode="true"]::handle:vertical {
    background: #616161;
}

QScrollBar[darkMode="true"]::handle:vertical:hover {
    background: #757575;
}

QScrollBar:horizontal {
    border: none;
    background: transparent;
    height: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #BDBDBD;
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: #9E9E9E;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
    height: 0;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/*** TABLES AND LISTS ***/
QTableView, QListView, QTreeView {
    alternate-background-color: #F5F5F5;
    background-color: #FFFFFF;
    border: 1px solid #E0E0E0;
    gridline-color: #E0E0E0;
    selection-background-color: #E3F2FD;
    selection-color: #212121;
    outline: none;
}

QTableView::item, QListView::item, QTreeView::item {
    padding: 8px 4px;
    border-bottom: 1px solid #F5F5F5;
}

QTableView::item:selected, QListView::item:selected, QTreeView::item:selected {
    background-color: #E3F2FD;
    color: #212121;
}

QTableView::item:hover:!selected, QListView::item:hover:!selected, QTreeView::item:hover:!selected {
    background-color: #F5F5F5;
}

QHeaderView::section {
    background-color: #FFFFFF;
    color: #616161;
    padding: 8px 4px;
    font-weight: 500;
    border: none;
    border-bottom: 1px solid #E0E0E0;
    text-align: left;
}

QHeaderView::section:hover {
    background-color: #F5F5F5;
}

QTableView[darkMode="true"], QListView[darkMode="true"], QTreeView[darkMode="true"] {
    alternate-background-color: #2A2A2A;
    background-color: #1E1E1E;
    border: 1px solid #424242;
    gridline-color: #424242;
    selection-background-color: rgba(61, 90, 254, 0.2);
    selection-color: #FFFFFF;
}

QTableView[darkMode="true"]::item, QListView[darkMode="true"]::item, QTreeView[darkMode="true"]::item {
    border-bottom: 1px solid #2A2A2A;
    color: #FFFFFF;
}

QTableView[darkMode="true"]::item:hover:!selected, QListView[darkMode="true"]::item:hover:!selected, QTreeView[darkMode="true"]::item:hover:!selected {
    background-color: #2A2A2A;
}

QHeaderView::section[darkMode="true"] {
    background-color: #1E1E1E;
    color: #B0B0B0;
    border-bottom: 1px solid #424242;
}

QHeaderView::section[darkMode="true"]:hover {
    background-color: #2A2A2A;
}

/*** MENUS AND TOOLBARS ***/
QMenuBar {
    background-color: #FAFAFA;
    border-bottom: 1px solid #E0E0E0;
    color: #212121;
}

QMenuBar::item {
    padding: 8px 12px;
    background-color: transparent;
}

QMenuBar::item:selected {
    background-color: #E3F2FD;
    border-radius: 4px;
}

QMenu {
    background-color: white;
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    padding: 8px 0;
}

QMenu::item {
    padding: 8px 32px 8px 16px;
    color: #212121;
}

QMenu::item:selected {
    background-color: #E3F2FD;
}

QMenu::separator {
    height: 1px;
    background-color: #E0E0E0;
    margin: 4px 12px;
}

QMenu::indicator {
    width: 18px;
    height: 18px;
    margin-left: 8px;
}

QMenuBar[darkMode="true"] {
    background-color: #121212;
    border-bottom: 1px solid #424242;
    color: #FFFFFF;
}

QMenuBar[darkMode="true"]::item:selected {
    background-color: rgba(61, 90, 254, 0.2);
}

QMenu[darkMode="true"] {
    background-color: #1E1E1E;
    border: 1px solid #424242;
}

QMenu[darkMode="true"]::item {
    color: #FFFFFF;
}

QMenu[darkMode="true"]::item:selected {
    background-color: rgba(61, 90, 254, 0.2);
}

QMenu[darkMode="true"]::separator {
    background-color: #424242;
}

/* Toolbars */
QToolBar {
    background-color: #FAFAFA;
    border-bottom: 1px solid #E0E0E0;
    spacing: 8px;
    padding: 4px;
}

QToolBar::separator {
    width: 1px;
    background-color: #E0E0E0;
    margin: 0 8px;
}

QToolButton {
    background-color: transparent;
    border-radius: 4px;
    padding: 6px;
    margin: 2px;
}

QToolButton:hover {
    background-color: rgba(0, 0, 0, 0.04);
}

QToolButton:pressed {
