    border-color: #616161;
}

QFrame.upload-area[darkMode="true"]:hover {
    background-color: #1A1A1A;
    border-color: #757575;
}

QFrame.upload-area[darkMode="true"][dragOver="true"] {
    background-color: rgba(61, 90, 254, 0.2);
    border-color: #3D5AFE;
}

/* Toast notification */
QFrame.toast {
    background-color: #323232;
    color: white;
    border-radius: 4px;
    padding: 16px;
    min-width: 288px;
    max-width: 568px;
}

QFrame.toast QPushButton {
    background-color: transparent;
    color: #BB86FC;
    border: none;
    padding: 8px;
    min-width: 64px;
    font-weight: 500;
    text-transform: uppercase;
}

QFrame.toast QPushButton:hover {
