}

/*** STATUS BAR ***/
QStatusBar {
    background-color: #FAFAFA;
    border-top: 1px solid #E0E0E0;
    color: #616161;
}

QStatusBar::item {
    border: none;
}

QStatusBar QLabel {
    color: #616161;
}

QStatusBar[darkMode="true"] {
    background-color: #121212;
    border-top: 1px solid #424242;
