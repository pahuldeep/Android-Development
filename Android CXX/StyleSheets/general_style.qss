}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow, QDateTimeEdit::up-arrow {
    image: url(:/resources/chevron-up.svg);
    width: 10px;
    height: 10px;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow, QDateTimeEdit::down-arrow {
    image: url(:/resources/chevron-down.svg);
    width: 10px;
    height: 10px;
}

QSpinBox[darkMode="true"], QDoubleSpinBox[darkMode="true"], QDateTimeEdit[darkMode="true"] {
    border: 1px solid #616161;
    background-color: #1E1E1E;
    color: #FFFFFF;
}

QSpinBox[darkMode="true"]:focus, QDoubleSpinBox[darkMode="true"]:focus, QDateTimeEdit[darkMode="true"]:focus {
    border: 2px solid #3D5AFE;
}

QSpinBox[darkMode="true"]::up-button, QDoubleSpinBox[darkMode="true"]::up-button, QDateTimeEdit[darkMode="true"]::up-button,
QSpinBox[darkMode="true"]::down-button, QDoubleSpinBox[darkMode="true"]::down-button, QDateTimeEdit[darkMode="true"]::down-button {
