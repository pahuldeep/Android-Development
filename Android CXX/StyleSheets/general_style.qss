/*** GROUP BOXES ***/
QGroupBox {
    border: 1px solid #E0E0E0;
    border-radius: 4px;
    margin-top: 20px;
    padding-top: 24px;
    font-weight: 500;
    background-color: #FFFFFF;
}

QGroupBox::title {
