}

/* Style for dates */
QCalendarWidget QAbstractItemView:enabled {
    color: #212121;
}

QCalendarWidget QAbstractItemView:disabled {
    color: #BDBDBD;
}

QCalendarWidget[darkMode="true"] {
    background-color: #1E1E1E;
    selection-background-color: rgba(61, 90, 254, 0.2);
}

QCalendarWidget[darkMode="true"] QToolButton {
